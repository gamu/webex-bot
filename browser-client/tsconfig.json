{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "es2020",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["node"],
    "outDir": "../dist",
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "../node_modules"
  ]
}